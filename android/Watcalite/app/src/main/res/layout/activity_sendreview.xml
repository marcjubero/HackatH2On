<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/tagb2"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comentaris (140 caràcters)"
        android:id="@+id/textView"
        android:textColor="#ffffffff"
        android:textSize="25dp"
        android:textIsSelectable="true"
        android:layout_above="@+id/comment_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:hint="AFAGEIX-HI AQUÍ ELS SEUS COMENTARIS SOBRE LA QUALITAT DE L'AIGUA I HASHTAGS!"
        android:background="#ffffffff"
        android:backgroundTint="@color/material_blue_grey_800"
        android:layout_width="wrap_content"
        android:layout_height="134dp"
        android:id="@+id/comment_edit_text"
        android:maxLength="140"
        android:textColor="#ffffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/send_button"
        android:id="@+id/send_review_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:onClick="sendReview"/>
</RelativeLayout>
